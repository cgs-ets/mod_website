{{!
    @template mod_website/_block_picturebutton

    A picture button.
}}
<a target="_blank" class="picturebutton" href="{{#isfile}}{{buttonfile}}{{/isfile}}{{^isfile}}{{buttonurl}}{{/isfile}}">
  <figure class="image-block {{^includepicture}}nopicture{{/includepicture}}" {{#includepicture}}style="background-image: url({{buttonpicture.path}})"{{/includepicture}}>
    <h2>{{buttontitle}}</h2>
    <figcaption>
      <h3>
        {{buttontitle}}
      </h3>
    </figcaption>
  </figure>
</a>