{{!
    @template mod_website/edit_menu

    A single section.
}}
{{#items}}
<div class="list-group-item" data-pageid="{{id}}" data-hidden="{{hidden}}">
  <div class="page-details">
    <span>{{title}}</span>
    <span class="options">
      <i class="visibility-visible fa fa-eye" aria-hidden="true"></i>
      <i class="visibility-hidden fa fa-eye-slash" aria-hidden="true"></i>
      <a href="{{url}}" target="_blank"><i class="fa fa-external-link" aria-hidden="true"></i></a>
    </span>
  </div>
  <div class="list-group nested-sortable {{classes}}">
    {{#children}}
      <div class="list-group-item" data-pageid="{{id}}" data-hidden="{{hidden}}">
        <div class="page-details">
          <span>{{title}}</span>
          <span class="options">
            <i class="visibility-visible fa fa-eye" aria-hidden="true"></i>
            <i class="visibility-hidden fa fa-eye-slash" aria-hidden="true"></i>
            <a href="{{url}}" target="_blank"><i class="fa fa-external-link" aria-hidden="true"></i></a>
          </span>
        </div>
        <div class="list-group nested-sortable {{classes}}"></div>
      </div>
    {{/children}}
  </div>
</div>
{{/items}}