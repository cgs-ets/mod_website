{{!
    @template mod_website/site

    The overall site layout.
}}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,400&display=swap" rel="stylesheet">

<div class="site-root" data-mode="{{mode}}" {{#canedit}}data-canedit="{{canedit}}"{{/canedit}} data-currentpage="{{page.id}}">

  {{#canedit}}
    {{>mod_website/site_editor}}
  {{/canedit}}
  <div class="topbar editzone">
    <div class="logo">
      <a target="_top" href="{{course.url}}">{{course.shortname}}</a> / 
      <a href="{{website.url}}">{{website.name}}</a>
    </div>
    <div class="topbar-right flex">
      {{>mod_website/site_menu}}
      {{#canedit}}<a data-formurl="{{embedded_editmenuurl}}" href="{{editmenuurl}}" class="btn-edit-menu editoption">Edit menu</a>{{/canedit}}
      {{#canedit}}<a data-formurl="{{embedded_newpageurl}}" href="{{newpageurl}}" class="btn-add-site-page editoption">New page</a>{{/canedit}}
    </div>
  </div>
  {{#page}}
    {{>mod_website/site_header}}
    <div class="site-body">
      <div class="site-sections {{#numsections}}has-sections{{/numsections}}">
        <a class="btn-sort-sections editoption" title="Change section ordering" href="#"><i class="fa fa-sort" aria-hidden="true"></i><i class="fa fa-check" aria-hidden="true"></i></a>
        {{#sections}}
          {{>mod_website/site_section}}
        {{/sections}}
      </div>
      <div class="page-options">
        {{#canedit}}<a data-formurl="{{embedded_newsectionurl}}" href="{{newsectionurl}}" class="btn-add-site-section editoption">Add section</a>{{/canedit}}
      </div>
    </div>
  {{/page}}

</div>