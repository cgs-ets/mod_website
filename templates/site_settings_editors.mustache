{{!
    @template mod_website/site_menu

    The main menu.
}}
<div class="editors">
  
  <div>
    <h6>Default editors (site owner & editors)</h6>
    <div class="default-editors">
      {{#defaulteditors}}
        <div class="user">
            <img src="{{profilephoto}}" class="round"/> <span class="name">{{lastname}}, {{firstname}}</span>
        </div>
      {{/defaulteditors}}
    </div>
    {{#additionaleditors.0}}
      <h6>Additional editors</h6>
      <div class="additional-editors">
        {{#additionaleditors}}
          <div class="user">
              <img src="{{profilephoto}}" class="round"/> <span class="name">{{lastname}}, {{firstname}}</span>
          </div>
        {{/additionaleditors}}
      </div>
    {{/additionaleditors.0}}
  </div>
  <h4>Modify editors</h4>
</div>