{{!
    @template mod_website/site_menu

    The main menu.
}}
<div class="editors">
  <h4>Current editors</h4>
  <div class="ml-25">
    <h5>Site owner (editor by default)</h5>
    <div class="default-editors">
      {{#defaulteditors}}
        <div class="user">
            <img src="{{profilephoto}}" class="round"/> <span class="name">{{lastname}}, {{firstname}}</span>
        </div>
      {{/defaulteditors}}
    </div>
    {{#additionaleditors.0}}
      <h5>Additional editors</h5>
      <div class="additional-editors">
        {{#additionaleditors}}
          <div class="user">
              <img src="{{profilephoto}}" class="round"/> <span class="name">{{lastname}}, {{firstname}}</span>
          </div>
        {{/additionaleditors}}
      </div>
    {{/additionaleditors.0}}
  </div>
  <h4>Modify editors</h4>
</div>